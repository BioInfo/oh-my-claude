{
  "name": "@oh-my-claude/plugin",
  "version": "0.1.0",
  "description": "Multi-agent orchestration plugin for Claude Code with LSP and persistent state",
  "keywords": [
    "claude-code",
    "plugin",
    "orchestration",
    "multi-agent",
    "lsp",
    "ast-grep",
    "sisyphus"
  ],
  "author": "BioInfo <https://github.com/BioInfo>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:plugin": "tsx scripts/test-plugin.ts",
    "benchmark": "tsx scripts/benchmark.ts",
    "format": "prettier --write .",
    "lint": "eslint src/ --ext .ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "@ast-grep/napi": "^0.20.0",
    "vscode-languageclient": "^9.0.0",
    "vscode-languageserver-protocol": "^3.17.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BioInfo/oh-my-claude.git"
  },
  "bugs": {
    "url": "https://github.com/BioInfo/oh-my-claude/issues"
  },
  "homepage": "https://github.com/BioInfo/oh-my-claude#readme",
  "claudePlugin": {
    "apiVersion": "1.0",
    "capabilities": [
      "lsp",
      "ast-grep",
      "state-persistence",
      "hooks"
    ]
  }
}
